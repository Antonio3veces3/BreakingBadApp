<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/black" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/settings_ic_user"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="98dp"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing=".14"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold"
                android:text="USERNAME" />

            <TextView
                android:id="@+id/perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic"
                android:text="VER TU PERFIL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="31dp"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="20dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/settings_ic_comments"
                android:background="@drawable/style_border"
                android:layout_marginBottom="10dp"
                android:letterSpacing=".10"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Enviar Comentarios" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/settings_ic_settings"
                android:layout_marginBottom="10dp"
                android:background="@drawable/style_border"
                android:letterSpacing=".10"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Configuración y privacidad" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/settings_ic_help"
                android:background="@drawable/style_border"
                android:layout_marginBottom="10dp"
                android:letterSpacing=".10"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Ayuda y soporte técnico" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/settings_ic_pantalla"
                android:background="@drawable/style_border"
                android:layout_marginBottom="10dp"
                android:letterSpacing=".10"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Pantalla" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/settings_ic_logout"
                android:background="@drawable/style_border"
                android:letterSpacing=".10"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Cerrar sesión" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>